<center>
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
<table id="table1"> 
   <tr>
   <div class="field">
   <td <%= f.label :email %> : &nbsp </td>
   <td> <%= f.email_field :email, autofocus: true, autocomplete: "email" %> </td>
   </div>
   </tr>
  
  <tr>
  <div class="field">
  <td> <%= f.label :password %> : &nbsp </td>
  <td> <%= f.password_field :password, autocomplete: "current-password" %> </td>
  </div>
  </tr>
</table>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</center>
