<div class="container">
<center>
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
  
  <table id="table1">
  <tr>	  
  <div class="field">
       <td><%= f.label :name %> : &nbsp </td>
       <td><%= f.text_field :name, autofocus: true %></td>
  </div>
  </tr>
  
  <tr>
  <div class="field">
    <td><%= f.label :email %> : &nbsp </td>
    <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %> </td>
  </div>
  </tr>

  <tr>
  <div class="field">
    <td><%= f.label :password %> </br>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>: &nbsp </td>
    <td><%= f.password_field :password, autocomplete: "new-password" %> </td>
  </div>
  </tr>

  <tr>
  <div class="field">
    <td><%= f.label :password_confirmation %> : &nbsp </td>
    <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %> </td>
  </div>
  </tr>
</table> </br>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</center>
</div>